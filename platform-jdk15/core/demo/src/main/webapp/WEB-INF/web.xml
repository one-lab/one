    <filter>
        <filter-name>mvcFilter</filter-name>
        <filter-class>com.sinosoft.one.mvc.MvcFilter</filter-class>
    </filter> 
    <filter-mapping>
        <filter-name>mvcFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
    </filter-mapping> 
    
