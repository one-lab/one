<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE taglib
  PUBLIC "-//Sun Microsystems, Inc.//DTD JSP Tag Library 1.2//EN"
  "http://java.sun.com/dtd/web-jsptaglibrary_1_2.dtd">
<taglib>
  <tlib-version>1.0</tlib-version>
  <jsp-version>1.2</jsp-version>
  <short-name>msg</short-name>
  <uri>http://mvc.one.sinosoft.com/validation/msg</uri>
  <description>validation error message core library</description>

  <tag>
    <name>errorMsg</name>
    <tag-class>com.sinosoft.one.mvc.web.taglibs.ErrorMessageTag</tag-class>
    
    <description>
		显示验证错误信息的jsp标签，参数有 
        property 属性名
        type 显示具体的错误信息类型
    </description>
    <attribute>
        <name>property</name>
        <required>true</required>
        <rtexprvalue>false</rtexprvalue>
    </attribute>
    <attribute>
        <name>type</name>
        <required>false</required>
        <rtexprvalue>false</rtexprvalue>
        <description>
        	显示具体的错误信息类型，有：
        	-- propertyPath 
        	-- message 
        	-- invalidValue 
        </description>
    </attribute>
  </tag>


</taglib>
