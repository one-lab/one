<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd" 
	default-autowire="byName" default-lazy-init="false">

<!-- 必须在调用nitification的模块打开component-scan
<context:component-scan base-package="cn.com.chinalife.ebusiness" />
 -->
	<bean id="queuesHolder" class="com.sinosoft.chinaelife.ebusiness.sys.util.queue.QueuesHolder">
		<property name="queueSize" value="1000" />
	</bean>

	<!-- 读出Queue中消息发送到monitor -->
	<bean id="notificationDealer"
		class="com.sinosoft.one.notification.NotificationDealer">
		<property name="queueName" value="notification" />
		<property name="appName" value="online" />
		<property name="url">
			<value>http://10.0.68.123:9001/monitor/monitor/notification.do?</value>
		</property>
		<!-- 参数名称定义  -->
		<property name="param_tel" value="isSendSms" />
		<property name="param_email" value="isSendEmail" />
		<property name="param_title" value="title" />
		<property name="param_content" value="content" />
	</bean>


	<!-- NotificationQueueAppender 的单例 -->
	<bean id="notificationQueueAppender" scope="singleton"
		class="com.sinosoft.one.notification.NotificationQueueAppender">
		<property name="queueName" value="notification" />
	</bean>
	<bean id="notificationService" 
		class="com.sinosoft.one.notification.service.spring.NotificationServiceSpringImpl">
	</bean>
</beans>